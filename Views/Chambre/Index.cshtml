@model List<Chambre>  
}

<div class="container">
    <h1 class="mt-3">Index</h1>

    <ul class="list-group mt-3">
        @foreach (Chambre chambre in ViewBag.Chambres)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>Numero:</strong> @chambre.Numero |
                    <strong>Type:</strong> @chambre.Type |
                    <strong>Etage:</strong> @chambre.NumeroEtage |
                    <strong>Date Debut:</strong> @chambre.DateDebut |
                    <strong>Date Fin:</strong> @chambre.DateFin
                </div>
                <form method="post" asp-controller="Chambre" asp-action="Supprimer">
                    <input type="hidden" name="Numero" value="@chambre.Numero" />
                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </li>
        }
    </ul>

    <a class="btn btn-primary mt-3" asp-controller="Chambre" asp-action="Ajouter">Ajouter un Livre</a>
    <a class="btn btn-primary mt-3" asp-controller="Chambre" asp-action="Modifier">Modifier un Livre</a>
</div>
