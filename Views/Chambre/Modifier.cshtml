@model GestionHotel.Models.Chambre

@{
    ViewData["Title"] = "Modifier Chambres";
}

<h1>Modifier Chambre</h1>

<form asp-controller="Chambre" asp-action="Modifier" method="post">
    <div class="form-group">
        <label asp-for="Numero "></label>
        <input asp-for="Numero" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumeroEtage"></label>
        <input asp-for="NumeroEtage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateDebut"></label>
        <input asp-for="DateDebut" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateFin"></label>
        <input asp-for="DateFin" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Modifier Chambre</button>

</form>

